#include <stdio.h>

int main()
{
	int num1, num2;
	char op;
	prinf("Enter Num 1 : ");
	fflush(stdout);
	scanf("%d", &num1);
	prinf("Enter Num 2 : ");
	fflush(stdout);
	scanf("%d", &num2);
	prinf("Operation : ");
	fflush(stdout);
	scanf("%d", &op);
	switch(op)
	{

	case '+':
		printf("result  = %d",num1 + num2);
		break ;
	case '-':
		printf("result = %d",num1 - num2);
		break ;
	case '*':
		printf("result = %d",num1 * num2);
		break;
	case '/':
		printf("result = %d",num1 / num2);

	}
	fflush(stdout);

	return 0;
}
