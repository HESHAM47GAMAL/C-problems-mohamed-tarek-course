#include <stdio.h>

int main()
{
	int level ;
	printf("Enter level of inverted Half primid : ");
	fflush(stdout);
	scanf("%d",&level);
	for(short i = 1 ; i <= level ;i++)
	{
		for(int spaces1 = i -1 ; spaces1 >=1 ; spaces1--)
		{
			printf(" "),fflush(stdout);
		}
		printf("*"),fflush(stdout);
		for(int spaces2 = 10 - (2*i) ; spaces2 >= 1 ; spaces2--)
		{
			printf(" "),fflush(stdout);
		}
		printf("*"),fflush(stdout);
		printf("\n"),fflush(stdout);

	}

	return 0;
}
