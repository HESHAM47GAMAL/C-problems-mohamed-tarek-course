#include <stdio.h>

int main()
{
	int level ;
	printf("Enter level of inverted Half primid : ");
	fflush(stdout);
	scanf("%d",&level);
	for(short i = level ; i >= 1 ;i--)
	{
		for(short starts =  i ; starts  >= 1 ;starts--)
		{
			pritnf("*");
			fflush(stdout);
		}
		printf("\n");
		fflush(stdout);
	}

	return 0;
}
